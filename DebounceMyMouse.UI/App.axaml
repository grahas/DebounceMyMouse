
<Application
    x:Class="DebounceMyMouse.UI.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DebounceMyMouse.UI"
    RequestedThemeVariant="Default">
    <!--  "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options.  -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <TrayIcon.Icons>
        <TrayIcons>
            <TrayIcon
                Clicked="OnOpenSettings"
                Icon="/Assets/mouse.ico"
                ToolTipText="DebounceMyMouse is running">
                <TrayIcon.Menu>
                    <NativeMenu>
                        <NativeMenuItem Click="OnExitApp" Header="Quit" />
                    </NativeMenu>
                </TrayIcon.Menu>
            </TrayIcon>
        </TrayIcons>
    </TrayIcon.Icons>

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
</Application>