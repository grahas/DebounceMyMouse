<Window
    x:Class="DebounceMyMouse.UI.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:DebounceMyMouse.UI.ViewModels"
    Title="DebounceMyMouse"
    Width="600"
    Height="600"
    MinWidth="600"
    MinHeight="600"
    MaxWidth="600"
    MaxHeight="600"
    d:DesignHeight="600"
    d:DesignWidth="600"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/mouse.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="*,*" RowDefinitions="*,Auto">
        <!--  Two columns side by side  -->
        <Border
            Grid.Row="0"
            Grid.Column="0"
            Margin="8">

            <StackPanel Margin="8" Spacing="8">

                <!--  Settings  -->
                <TextBlock
                    Margin="0,0,0,8"
                    FontWeight="Bold"
                    Text="Debounce Settings" />
                <ItemsControl ItemsSource="{Binding Inputs}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel
                                Margin="0,8"
                                Orientation="Horizontal"
                                Spacing="8">
                                <CheckBox Content="{Binding Name}" IsChecked="{Binding IsEnabled, Mode=TwoWay}" />
                                <NumericUpDown
                                    Width="120"
                                    FormatString="N0"
                                    Increment="1"
                                    IsEnabled="{Binding IsEnabled}"
                                    Maximum="1000"
                                    Minimum="0"
                                    ParsingNumberStyle="Integer"
                                    Value="{Binding DebounceMs, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                <TextBlock VerticalAlignment="Center" Text="ms" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!--  Explanation of how to use the app  -->
                <TextBlock
                    Margin="0,5"
                    FontSize="18"
                    FontWeight="Bold">
                    How To Use
                </TextBlock>
                <TextBlock
                    Margin="0,5"
                    xml:space="default"
                    TextWrapping="Wrap">
                    Click your faulty mouse button a couple times to get samples of the fault time.
                    The log will output in red for detected faulty clicks.
                    The Î” indicates the time from the click to that line.
                    A red line means the input was blocked.
                    The input should be set to a number greater than the largest fault time.
                    Collect a bunch of samples and click learn to calculate the ideal time.
                    Click save when satisfied with values.
                </TextBlock>

                <!--  Settings  -->
                <TextBlock
                    Margin="0,5"
                    FontSize="18"
                    FontWeight="Bold">
                    Settings
                </TextBlock>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <CheckBox Content="Automatic Startup" IsChecked="{Binding LaunchOnStartup}" />
                </StackPanel>
            </StackPanel>
        </Border>
        <!--  Logs  -->
        <Border
            Grid.Row="0"
            Grid.Column="1"
            Margin="8">
            <ScrollViewer>
                <ListBox x:Name="EventLogListBox" ItemsSource="{Binding MouseEventLogs}">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0" />
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0" Background="{Binding BackgroundColor}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Foreground="Black" Text="{Binding LogMessage}" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
        </Border>

        <!--  Button Row  -->
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="8"
            HorizontalAlignment="Right"
            Orientation="Horizontal"
            Spacing="8">
            <Button
                Command="{Binding Learn}"
                Content="Learn"
                ToolTip.Tip="Click to automatically calculate the delay value" />
            <Button
                Command="{Binding SaveCommand}"
                Content="Save"
                ToolTip.Tip="Click to save and test the settings" />
            <Button
                Command="{Binding ClearLogCommand}"
                Content="Clear Log"
                ToolTip.Tip="Click to reset the log" />
        </StackPanel>
    </Grid>
</Window>
